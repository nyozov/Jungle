<h1>Signup!</h1>

<%= form_for :user, url: '/users' do |f| %>
  <div class="form-group">
  <label for="user">Name</label>
  <%= f.text_field :name, class:'form-control',id:'user' %>

  </div>
  <div class="form-group">
  <label for="useremail">Email address</label>
  <%= f.text_field :email, class:'form-control',id:'useremail' %>
  <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
  </div>
  <div class="form-group">
  <label for="userpass">Password</label>
  <%= f.password_field :password, class:'form-control',id:'userpass' %>
  </div>
  <div class="form-group">
  <label for="userpassconfirm">Password Confirmation</label>
  <%= f.password_field :password_confirmation, class:'form-control',id:'userpassconfirm'%>
  </div>
  <%= f.submit "Submit", class:'btn btn primary' %>

<% end %>

